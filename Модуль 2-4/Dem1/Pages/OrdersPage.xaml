<Page x:Class="Dem1.Pages.OrdersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Dem1.Pages"
      mc:Ignorable="d" 
      xmlns:models="clr-namespace:Dem1.Models"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Заказы">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>



        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="10">
            <Button Content="Назад" Width="150" Margin="5" Click="Back_Click"/>
            <Button x:Name="AddOrder" Click="AddOrder_Click"  Content="Добавить заказ" Width="150" Margin="5"/>
        </StackPanel>

        <ListView x:Name="OrdersListView" Grid.Row="2" HorizontalContentAlignment="Stretch" MouseDoubleClick="OrdersListView_MouseDoubleClick">
            <ListView.ItemTemplate>
                <DataTemplate DataType="models:Order">
                    <Border BorderBrush="Black" BorderThickness="2"  Margin="5">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="140"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0" Margin="5" BorderBrush="Black" BorderThickness="1">
                                <StackPanel>
                                    <TextBlock Text="{Binding Article}" FontWeight="Bold"/>
                                    <TextBlock TextWrapping="Wrap">
                                        <Run Text="Статус заказа:"/>
                                        <Run Text="{Binding Status}"/>
                                    </TextBlock>
                                    <TextBlock TextWrapping="Wrap">
                                        <Run Text="Адрес пункта выдачи:"/>
                                        <Run Text="{Binding PickupPoint.Address}"/>
                                    </TextBlock>
                                    <TextBlock TextWrapping="Wrap">
                                         <Run Text="Дата заказа:"/>
                                         <Run Text="{Binding Date}"/>
                                    </TextBlock>
                                </StackPanel>
                            </Border>

                            <Border Grid.Column="2" BorderBrush="Black" BorderThickness="2" Margin="5">
                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <TextBlock Text="Дата доставки"/>
                                    <TextBlock Text="{Binding DeliveryDate}"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
