<Page x:Class="Dem1.Pages.ProductPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Dem1.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      xmlns:model="clr-namespace:Dem1.Models"
      Title="Товары">

    <Page.Resources>
        <Style x:Key="PriceTextStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Times New Roman"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding HasDiscount}" Value="False">
                    <Setter Property="Visibility" Value="Collapsed"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <TextBlock x:Name="FullNameTextBlock" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <Image Source="/Icon.png" Stretch="Uniform" Height="40"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="10">
            <Button Content="Выйти" Width="150" Margin="5" Click="Logout_Click"/>
            <Button x:Name="AddProduct" Click="AddProduct_Click" Content="Создать новый товар" Width="150" Margin="5"/>
            <Button x:Name="Orders" Click="Orders_Click"  Content="Заказы" Width="150" Margin="5"/>
        </StackPanel>

        <StackPanel Grid.Row="1" x:Name="FilterStackPanel" Orientation="Horizontal" Margin="10">
            <TextBlock Text="Поиск:"/>
            <TextBox x:Name="SearchTextBox" Width="300" Margin="5,0,5,0" TextChanged="FiterChanged"/>
            <TextBlock Text="Поставщик:"/>
            <ComboBox x:Name="ProviderComboBox" Width="150" Margin="5,0,5,0" SelectionChanged="FiterChanged"/>
            <TextBlock Text="Количество:"/>
            <ComboBox x:Name="SortComboBox" Width="150" Margin="5,0,5,0" SelectionChanged="FiterChanged">
                <ComboBoxItem Content="Без сортировки"/>
                <ComboBoxItem Content="По возрастанию"/>
                <ComboBoxItem Content="По убыванию"/>
            </ComboBox>
        </StackPanel>

        <ListView x:Name="ProductListView" Grid.Row="2" HorizontalContentAlignment="Stretch" MouseDoubleClick="ProductListView_MouseDoubleClick">
            <ListView.ItemContainerStyle>

                <Style TargetType="ListViewItem">
                    <Setter Property="Background" Value="#7FFF00"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsBigDiscount}" Value="True">
                            <Setter Property="Background" Value="#2E8B57"/>
                        </DataTrigger>

                        <DataTrigger Binding="{Binding Amount}" Value="0">
                            <Setter Property="Background" Value="LightBlue"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.ItemTemplate>
                <DataTemplate DataType="model:Product">
                    <Border BorderBrush="Black" BorderThickness="2"  Margin="5">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="120"/>
                            </Grid.ColumnDefinitions>

                            <Border BorderBrush="Black" BorderThickness="2"  Margin="5" >
                                <Image Source="{Binding PhotoPath}" Stretch="Uniform"/>
                            </Border>

                            <Border Grid.Column="1" Margin="5" BorderBrush="Black" BorderThickness="1">
                                <StackPanel>
                                    <TextBlock FontWeight="Bold">
                                            <Run Text="{Binding Category.Name}"/>
                                            <Run Text="|"/>
                                            <Run Text="{Binding Name}"/>
                                    </TextBlock>
                                    <TextBlock TextWrapping="Wrap">
                                         <Run Text="Описание товара:"/>
                                         <Run Text="{Binding Desctription}"/>
                                    </TextBlock>
                                    <TextBlock TextWrapping="Wrap">
                                         <Run Text="Производитель:"/>
                                         <Run Text="{Binding Manufacturer.Name}"/>
                                    </TextBlock>
                                    <TextBlock TextWrapping="Wrap">
                                          <Run Text="Поставщик:"/>
                                          <Run Text="{Binding Provider.Name}"/>
                                    </TextBlock>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Цена:"/>
                                        <TextBlock Text="{Binding Price, StringFormat=C}"
                                                   Foreground="Red"
                                                   TextDecorations="Strikethrough" Margin="5,0,0,0"
                                                   Style="{StaticResource PriceTextStyle}"/>
                                        <TextBlock Text="{Binding DicscountedPrice, StringFormat=C, Mode=OneWay}" Margin="5,0,0,0" />
                                    </StackPanel>

                                    <TextBlock TextWrapping="Wrap">
                                         <Run Text="Единицы измерения:"/>
                                         <Run Text="{Binding Unit}"/>
                                    </TextBlock>
                                    <TextBlock TextWrapping="Wrap">
                                         <Run Text="Количество на складе:"/>
                                         <Run Text="{Binding Amount}"/>
                                    </TextBlock>
                                </StackPanel>
                            </Border>

                            <Border Grid.Column="2" BorderBrush="Black" BorderThickness="2" Margin="5">
                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <TextBlock FontSize="40">
                                        <Run Text="{Binding Discount}"/>
                                        <Run Text="%"/>
                                    </TextBlock>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>