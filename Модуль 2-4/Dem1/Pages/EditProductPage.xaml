<Page x:Class="Dem1.Pages.EditProductPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Dem1.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800">

    <ScrollViewer>
        <StackPanel Width="400" Margin="10">
            <Image x:Name="ProductImage" Height="150" Stretch="Uniform"/>
            <Button Content="Выбрать изображение" Click="SelectImage_Click"/>
            <TextBlock Text="Артикул"/>
            <TextBox x:Name="CodeTextBox"/>
            <TextBlock  Text="Название"/>
            <TextBox x:Name="NameTextBox"/>
            <TextBlock Text="Описание"/>
            <TextBox x:Name="DescriptionTextBox"/>
            <TextBlock Text="Категория"/>
            <ComboBox x:Name="CategoryComboBox" DisplayMemberPath="Name"/>
            <TextBlock Text="Производитель"/>
            <ComboBox x:Name="ManufacturerComboBox" DisplayMemberPath="Name"/>
            <TextBlock Text="Поставщик"/>
            <ComboBox x:Name="ProviderComboBox" DisplayMemberPath="Name"/>
            <TextBlock Text="Цена"/>
            <TextBox x:Name="PriceTextBox"/>
            <TextBlock Text="Скидка"/>
            <TextBox x:Name="DiscountTextBox"/>
            <TextBlock Text="Количество на складе"/>
            <TextBox x:Name="AmountTextBox"/>
            <TextBlock Text="Единицы измерения:"/>
            <TextBox x:Name="UnitTextBox"/>

            <StackPanel Orientation="Horizontal">
                <Button Content="Назад" Click="Back_Click" Margin="5,0,5,0"/>
                <Button Content="Сохранить" Click="Save_Click" Margin="5,0,5,0"/>
                <Button Content="Удалить" Click="Delete_Click" Margin="5,0,5,0"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Page>
