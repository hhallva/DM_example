<Page x:Class="Dem1.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Dem1.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Авторизация">

    <StackPanel Margin="40" Width="300" VerticalAlignment="Center">
        <TextBlock Text="Логин:"/>
        <TextBox  x:Name="LoginTextBox"/>
        <TextBlock Text="Пароль:"/>
        <PasswordBox x:Name="PasswordTextBox"/>
        <Button Content="Авторизоваться" Click="Login_Click"/>
        <Button Content="Войти как гость" Click="Guest_Click"/>
    </StackPanel>
</Page>
